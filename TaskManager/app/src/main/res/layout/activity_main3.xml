<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="rtrk.pnrs1.ra43_2014.Main3Activity">


    <rtrk.pnrs1.ra43_2014.PieChart
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/visokaPita"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visok prioritet"
        android:textSize="18dp"
        android:id="@+id/visokaPitaTekst"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/visokaPita"/>

    <rtrk.pnrs1.ra43_2014.PieChart
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/srednjaPita"
        android:layout_alignParentRight="true"
        android:layout_below="@id/visokaPitaTekst"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Srednji prioritet"
        android:textSize="18dp"
        android:id="@+id/srednjaPitaTekst"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/srednjaPita"/>

    <rtrk.pnrs1.ra43_2014.PieChart
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/niskaPita"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/visokaPitaTekst"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nizak prioritet"
        android:textSize="18dp"
        android:id="@+id/niskaPitaTekst"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/niskaPita"/>

    <Button
        android:id="@+id/button8"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazad"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
